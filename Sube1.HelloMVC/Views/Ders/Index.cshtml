@model IEnumerable<Ders>
    @{
    ViewData["Title"] = "Index";
    }

    <h1>Ders List</h1>
    <a asp-action="AddDers" asp-controller="Ders" class="btn btn-outline-primary">Ders Ekle</a>
    <table class="table">
        <thead>
            <tr>
                <th>Ders Adý</th>
                <th>Dersin Kodu</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>@item.DersAdý</td>
                <td>@item.DersKodu</td>
                
                <td><a class="btn btn-sm btn-outline-success" href="/Ders/EditDers/@item.Dersid">Düzenle</a> <a onclick="return confirm('Emin misiniz?')" class="btn btn-sm btn-outline-danger" href="/Ders/DeleteDers/@item.Dersid">Sil</a></td>
            </tr>
        }
        </tbody>
    </table>
